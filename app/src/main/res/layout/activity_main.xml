<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Título en la parte superior -->
    <TextView
        android:id="@+id/scrolling_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:padding="8dp"
        android:text="Scrolling Text"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Contenedor del título principal y el contenido desplazable -->
    <TextView
        android:id="@+id/scrolling_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrolling_header"
        android:background="#3F51B5"
        android:padding="8dp"
        android:text="Beatles Anthology Vol. 1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- ScrollView para contenido desplazable, debajo del título principal -->
    <ScrollView
        android:id="@+id/scrolling_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrolling_title"
        android:paddingTop="8dp">

        <!-- LinearLayout para los textos y comentarios -->
        <LinearLayout
            android:id="@+id/comments_container"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Subtítulo alineado
         a la izquierda -->
        <TextView
            android:id="@+id/scrolling_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="8dp"
            android:text="@string/subtitle_text"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <!-- Texto principal alineado a la derecha -->
        <TextView
            android:id="@+id/scrolling_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="16sp"
            android:autoLink="web"
            android:textColor="#000000"
            android:text="@string/scrolling_text" />
    </LinearLayout>
</ScrollView>

    <!-- Botón para añadir comentarios, alineado en la parte inferior -->
<Button
android:id="@+id/add_comment_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Add Comment"
android:layout_centerHorizontal="true"
android:layout_alignParentBottom="true"
android:padding="8dp" />

    <!-- EditText para ingresar comentario, inicialmente oculto, encima del botón -->
<EditText
android:id="@+id/comment_edit_text"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_above="@id/add_comment_button"
android:hint="Escribe tu comentario aquí..."
android:padding="8dp"
    android:background="#FFFFFF"
android:visibility="gone"/>
    </RelativeLayout>
